@page
@model SevStudentsApp.Pages.StudentCourses.CreateModel
@{
}

<h2 class="mb-3">New Enrollment</h2>
@if (!Model.errorMessage.Equals(""))
{
                <h6><strong>@Model.errorMessage</strong></h6>
}

<form method="POST">
    <div class="row mb-3">
        <label for="studentid" class="col-md-1 col-form-label">StudentID</label>
        <div>

            @{
                List<SelectListItem> listAItems = new List<SelectListItem>();
                @foreach (var student in Model.students)
                {
                    listAItems.Add(new SelectListItem
                {
                    Text = @student.Firstname + " " + student.Lastname,
                    Value = @student.Id.ToString()
                });

                }
            }

            @Html.DropDownList("studentid", listAItems, new { @class = "form-control" })

        </div>
    </div>
    <div class="row mb-3">
        <label for="courseid" class="col-md-1 col-form-label">CourseID</label>
        <div>

            @{
                List<SelectListItem> listItems = new List<SelectListItem>();
                @foreach (var course in Model.courses)
                {
                    listItems.Add(new SelectListItem
                {
                    Text = @course.Description,
                    Value = @course.Id.ToString()
                });

                }
            }

            @Html.DropDownList("courseid", listItems, new { @class = "form-control" })

        </div>
    </div>

    <div class="row mb-3">
        <div class="offset-md-1 col-md-3 d-grid">
            <button type = "submit" class="btn btn-primary">Submit</button>
        </div>

        <div class="offset-md-1 col-md-3 d-grid">
            <a href="/StudentCourses/Index" role="button" class="btn btn-primary">Cancel</a>
        </div>
    </div>

</form>